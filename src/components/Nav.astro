---
import RSSLink from './RSSLink.astro';
import SiteLogo from './SiteLogo.astro';
import ThemeSwitcher from './ThemeSwitcher.svelte';
---

<nav id="main-nav">
	<ul>
		<li>
			<a aria-current={Astro.url.pathname === '/' ? 'page' : 'false'} href="/">HOME</a>
		</li>
		<li>
			<a aria-current={Astro.url.pathname?.startsWith('/blog') ? 'page' : 'false'} href="/blog"
				>BLOG</a
			>
		</li>
		<li>
			<a aria-current={Astro.url.pathname === '/work' ? 'page' : 'false'} href="/work">WORK</a>
		</li>
		<li>
			<a aria-current={Astro.url.pathname === '/speaking' ? 'page' : 'false'} href="/speaking"
				>SPEAKING</a
			>
		</li>
	</ul>
	<div class="brand">
		<SiteLogo />
		<span>puruvj.dev</span>
	</div>
	<span class="flex"></span>
	<span class="theme-switcher">
		<RSSLink />
		<ThemeSwitcher client:load />
	</span>
</nav>

<div class="mobile-nav" class:list={{ home: Astro.url.pathname === '/' }}>
	<a href="/" class="brand">
		<SiteLogo />
		<span>puruvj.dev</span>
	</a>
	<div class="divider"></div>
	<span class="page-name">{Astro.url.pathname.replace('/', '').split('/')[0]}</span>
	<span class="spacer"></span>
	<span>
		<RSSLink />
	</span>
</div>

<inview-element>
	<div id="smigget"></div>
</inview-element>

<script>
	// This hack is needed to rerun the custom element logic twice whenever page changes
	class InviewElement extends HTMLElement {
		observer: IntersectionObserver;

		constructor() {
			super();

			const main_nav = document.getElementById('main-nav');
			this.observer = new IntersectionObserver((entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						main_nav?.classList.remove('shadow');
					} else {
						main_nav?.classList.add('shadow');
					}
				});
			});
		}

		connectedCallback() {
			this.observer.observe(document.getElementById('smigget')!);
		}

		disconnectedCallback() {
			this.observer.unobserve(this);

			this.observer.disconnect();
		}
	}

	customElements.define('inview-element', InviewElement);
</script>

<style>
	nav {
		display: grid;
		align-items: center;
		grid-template-columns: 1fr auto 0 1fr;

		font-family: 'Jetbrains Mono Variable', monospace;
		font-size: 1.2rem;

		background: var(--app-color-shell);

		width: 61.8%;

		position: fixed;
		top: 0;
		z-index: 20000;

		padding-right: 0.6rem;

		border-radius: 0 0 1rem 1rem;

		transition:
			box-shadow 150ms ease-out,
			background-color var(--transition-duration) ease-in;
	}

	nav.shadow {
		box-shadow:
			0 3.4px 6.3px rgba(0, 0, 0, 0.099),
			0 27px 50px rgba(0, 0, 0, 0.1);
	}

	.mobile-nav {
		display: flex;
		gap: 0.75rem;
		align-items: center;
		padding: 1rem 0.5rem;

		&.home {
			.divider,
			.page-name {
				display: none;
			}
		}

		.brand {
			display: flex !important;

			&:hover {
				color: var(--app-color-primary);
			}
		}

		.divider {
			width: 1px;
			height: 1.6rem;
			background-color: rgba(var(--app-color-dark-rgb), 0.4);
		}

		.page-name {
			font-family: 'JetBrains Mono Variable', monospace;
			letter-spacing: 0.05rem;
			font-weight: 600;
			color: rgba(var(--app-color-dark-rgb), 0.8);
			font-size: 1.1rem;
		}

		.spacer {
			flex: 1 1 auto;
		}

		@media screen and (min-width: 1100px) {
			display: none;
		}
	}

	.smigget {
		position: absolute;
		top: 0;
		left: 0;

		width: 100%;
		height: 2px;
	}

	ul {
		display: flex;
		align-items: center;

		list-style: none;

		padding: 0;
		margin: 0;

		text-transform: lowercase;
	}

	a:not(.brand) {
		--color: var(--app-color-primary);
		--color-rgb: var(--app-color-primary-rgb);
		--marker-height: 6px;
		--marker-opacity: 0.4;
		--border-radius: 0;

		display: inline-block;

		user-select: none;

		z-index: 22;

		padding: 0rem 0.3rem;
		margin: 0.5rem 0.3rem;

		font-weight: 500;
		font-size: 1.15rem;
		color: var(--color) !important;

		position: relative;

		transition: all 170ms ease-in;

		&:focus-visible,
		&:hover {
			--border-radius: 4px;
			--marker-height: 100%;
			--marker-opacity: 1;
			--color: var(--app-color-primary-contrast) !important;

			&::after {
				transform: scaleX(1);
			}
		}

		&[aria-current='page'] {
			&::after {
				transform: scaleX(1);
			}
		}
	}

	a::after {
		content: '';

		position: absolute;
		bottom: 0;
		left: 0;
		z-index: -1;

		width: 100%;
		height: var(--marker-height);

		transform: scaleX(0);
		transform-origin: bottom;

		border-radius: var(--border-radius);

		will-change: transform;
		transition: all 170ms ease-in;

		background-color: rgba(var(--color-rgb), var(--marker-opacity));
	}

	.brand {
		font-family: 'JetBrains Mono Variable', monospace;
		font-weight: 600;
		color: var(--app-color-primary);
		font-size: 1.5rem;

		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;

		height: 100%;

		span {
			line-height: 1 !important;
		}

		:global(path),
		:global(rect) {
			transition: fill 200ms ease-in;
		}

		& :global(svg) {
			--size: 2rem;
			height: var(--size);
			width: var(--size);

			margin-right: 0.75rem;
		}
	}

	.theme-switcher {
		display: flex;
		justify-content: flex-end;
		gap: 0.5rem;
	}

	@media screen and (max-width: 1100px) {
		nav {
			width: 100%;

			top: unset;
			left: 0;
			bottom: 0;

			border-radius: 0;
			padding: 0.5rem 1.5rem;

			box-shadow: 0px 0px 63px rgba(0, 0, 0, 0.32) !important;

			.theme-switcher {
				gap: 1rem;

				> :global(:first-child) {
					display: none;
				}
			}
		}
	}

	@media screen and (max-width: 600px) {
		.brand {
			display: none !important;
		}

		a {
			padding-block: 0.3rem;
			margin: 0.2rem 0.2rem !important;

			font-size: 1.2rem;
		}

		nav {
			top: unset;
			grid-template-columns: auto 0 1fr auto;
		}
	}

	@media screen and (max-width: 405px) {
		a {
			padding-block: 0.3rem;
			margin: 0.2rem 0.2rem !important;
		}
	}
</style>

<style is:global>
	body.dark #main-nav.shadow {
		background-color: #383a3e;
	}

	body.radioactive #main-nav.shadow {
		background-color: #202046;
	}

	body.dark #main-nav.shadow {
		background-color: #383a3e;
	}

	@media screen and (max-width: 1100px) {
		body.dark #main-nav {
			background-color: #383a3e;
		}

		body.radioactive #main-nav {
			background-color: #202046;
		}

		body.dark #main-nav {
			background-color: #383a3e;
		}
	}
</style>
